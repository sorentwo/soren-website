<article class="wrapper">
  <section class="post-header">
    <h1 class="post-heading">{{page.title}}</h1>
    <span class="date">{{page.date | date_to_string}}</span>
    <span class="author"><em class="fancy">by</em> {{page.author}}</span>
  </section>

  <section class="post-body">
    {{content}}
  </section>
</article>
